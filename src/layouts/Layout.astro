interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="This is my personal portfolio, where you can find my resume presented in a more visual format. I hope you enjoy it!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/mg_logo.png" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
		<meta name="generator" content={Astro.generator} />
        <meta property="og:title" content="Portfolio by Martin" />
        <meta property="og:description" content="This is my personal portfolio, where you can find my resume presented in a more visual format. I hope you enjoy it!" />
        <meta property="og:image" content="/page_image.png" />
        <meta property="og:url" content="https://my-portfolio-git-main-martingarcia99s-projects.vercel.app/" />
        <meta name="twitter:card" content="/page_image.png" />
        <meta name="twitter:title" content="Portfolio by Martin" />
        <meta name="twitter:description" content="This is my personal portfolio, where you can find my resume presented in a more visual format. I hope you enjoy it!" />
        <meta name="twitter:image" content="https://my-portfolio-git-main-martingarcia99s-projects.vercel.app/" />
	</head>
	<body>
        
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
        background: rgb(22, 22, 22);
        scroll-behavior: smooth;
	}
    body{
        min-height: 100vh;
        overflow-x: hidden;
    }
    @media (prefers-reduced-motion: reduce) {
        html {
        scroll-behavior: auto;
        }
    }
</style>
